// esempio di file generato automaticamente per locust load testing

from locust import HttpUser, task, between

class LoadTestUser(HttpUser):
    wait_time = between(1, 3)

    @task(weight=0.8)
    def call_user_service_get_user(self):
        self.client.get("http://user-service:8080/api/users")

    @task(weight=0.2)
    def call_order_service_create_order(self):
        self.client.post("http://order-service:8080/api/orders", json={"userId": 1})
